{% # if set get the revision number from the config %}
{% assign revision = 0 %}
{%- if data.favicon.revision -%}
  {% # dodgy test to allow to confirm if data.favicon.revision is an integer %}
  {% capture test_var %}{{ data.favicon.revision | json }}{% endcapture %} 
  {% # if the variable is empty it is a string so we need to convert it to an integer %}
  {%- if test_var == "" -%}
    {% # convert the revision number to a string this will return 0 if invalid %}
    {% assign revision = data.favicon.revision | to_i }}
  {% else %} {% assign revision data.favicon.revision %}
{% endunless %}

{% # if the string to int conversion fails or data.favicon.revisi on is not set set the revision to 1 %}
{% if revision < 1 %} {% assign revision = 1 %}